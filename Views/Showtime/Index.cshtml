@model IEnumerable<Showtime>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@if (User.IsInRole("Admin"))
{
<a class="btn btn-primary" asp-controller="Showtime" asp-action="Add">Thêm suất chiếu</a>
}


<div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top" src="@item.Movie.Poster" width="100%" height="225" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@item.Movie.Title</p>
                            <p class="card-text">@item.Room.Name</p>
                            <p class="card-text">@item.Time</p>
                            <p class="card-text">@item.TicketPrice</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Showtime" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Chi tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
