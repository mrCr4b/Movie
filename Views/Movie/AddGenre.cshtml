@using Movie.Models.ViewModels
@model AddGenreViewModel

<form method="post" asp-action="AddGenre" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Tên thể loại</label>
        <input asp-for="Name" class="form-control" placeholder="Nhập tên thể loại">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>